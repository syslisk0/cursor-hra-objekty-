rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Čtení: povoleno všem (veřejný žebříček)
      allow read: if true;

      // Vytvoření a update: pouze vlastního dokumentu
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Rezervace unikátních uživatelských jmen
    match /usernames/{usernameKey} {
      allow read: if true; // pro ověření dostupnosti
      // vytvořit smí pouze přihlášený uživatel; update/delete nepovolujeme
      allow create: if request.auth != null && !exists(/databases/$(database)/documents/usernames/$(usernameKey));
      allow update, delete: if false;
    }
  }
}


